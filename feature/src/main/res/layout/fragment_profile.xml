<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.feature.ui.profile.ProfileViewModel" />

        <variable
            name="location"
            type="String" />

        <variable
            name="language"
            type="String" />

        <variable
            name="unit"
            type="String" />

        <variable
            name="tempUnit"
            type="String" />
        <variable
            name="speedUnit"
            type="String" />

        <variable
            name="profile"
            type="com.example.model.Profile" />
    </data>


    
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.NotificationsFragment"
    android:paddingTop="20dp">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@drawable/ic_home_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:loadImage="@{profile.image}"
        />
    
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aristarko Bashari"
        android:text="@{profile.name}"
        app:layout_constraintTop_toBottomOf="@id/user_image"
        app:layout_constraintStart_toStartOf="@id/user_image"
        app:layout_constraintEnd_toEndOf="@id/user_image"
        android:padding="8dp"
        android:background="@drawable/purple_bcg"
        android:layout_marginTop="-20dp"
        android:textSize="15sp"
        />
    
    <TextView
        android:id="@+id/user_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="aristarkobashari1@gmail.com"
        android:text="@{profile.email}"
        app:layout_constraintStart_toStartOf="@id/user_image"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>
    
    <TextView
        android:id="@+id/user_location"
        style="@style/ProfilePreferences"
        tools:text="Location: Tirana"
        android:text="@{`Location: `+location}"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/user_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"/>
    
    <TextView
        android:id="@+id/user_language"
        style="@style/ProfilePreferences"
        tools:text="Language: EN"
        android:text="@{`Language: `+language}"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/user_location"
        app:layout_constraintStart_toStartOf="@id/user_location" /> 
    
    <TextView
        android:id="@+id/user_unit"
        style="@style/ProfilePreferences"
        tools:text="Unit: METRIC"
        android:text="@{`Unit: `+unit}"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/user_language"
        app:layout_constraintStart_toStartOf="@id/user_language" />
    <TextView
        android:id="@+id/user_temp"
        style="@style/ProfilePreferences"
        tools:text="Temp Unit: Celsius"
        android:text="@{`Temp Unit: `+tempUnit}"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/user_unit"
        app:layout_constraintStart_toStartOf="@id/user_unit" />
    <TextView
        android:id="@+id/user_speed_unit"
        style="@style/ProfilePreferences"
        tools:text="Speed Unit: Celsius"
        android:text="@{`Speed Unit: `+speedUnit}"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/user_temp"
        app:layout_constraintStart_toStartOf="@id/user_temp" />
    
    <TextView
        android:id="@+id/user_help"
        style="@style/ProfilePreferences"
        android:text="Help"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/user_speed_unit"
        app:layout_constraintStart_toStartOf="@id/user_speed_unit" />

    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/user_help"
        app:layout_constraintStart_toStartOf="@id/user_help"/>


    <TextView
        android:id="@+id/log_out_text"
        style="@style/ProfilePreferences"
        android:text="Log out"
        tools:drawableStart="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/seperator"
        app:layout_constraintStart_toStartOf="@id/seperator"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>